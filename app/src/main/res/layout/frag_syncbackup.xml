<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pushtocloud"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:tint="@color/backgroundcolor"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_cloud_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalcontacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="745"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_35ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Contacts synced"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/lastsync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10ssp"
            android:layout_marginTop="-40dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Last synced: Today, 13:25"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

    </LinearLayout>


    <Button
        android:id="@+id/pushtocloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="120dp"
        android:padding="@dimen/_8ssp"
        android:singleLine="true"
        android:text="@string/pushtocloud"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15ssp"
        android:visibility="visible" />

</RelativeLayout>