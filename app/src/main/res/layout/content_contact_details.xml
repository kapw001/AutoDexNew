<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackalpha3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="autodex.com.autodex.activitys.ContactDetailsActivity"
    tools:showIn="@layout/activity_contact_details">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10ssp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="@dimen/_10ssp">

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:orientation="vertical"
                            app:layout_widthPercent="50%">

                            <TextView
                                android:id="@+id/mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                tools:text="9600749363" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"></View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/linearLayout4"
                            android:layout_toRightOf="@+id/linearLayout4"
                            app:layout_widthPercent="50%">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|end"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10ssp">

                                <ImageView
                                    android:id="@+id/msg"
                                    android:layout_width="@dimen/_25ssp"
                                    android:layout_height="@dimen/_25ssp"
                                    android:src="@mipmap/ic_msg"
                                    android:tint="@color/colorPrimary" />

                                <View
                                    android:layout_width="@dimen/_10ssp"
                                    android:layout_height="match_parent"></View>


                                <ImageView
                                    android:id="@+id/phonecall"
                                    android:layout_width="@dimen/_25ssp"
                                    android:layout_height="@dimen/_25ssp"
                                    android:src="@mipmap/ic_callwithoutline"
                                    android:tint="@color/colorPrimary" />

                                <View
                                    android:layout_width="@dimen/_10ssp"
                                    android:layout_height="match_parent"></View>

                                <ImageView
                                    android:id="@+id/favorite"
                                    android:layout_width="@dimen/_25ssp"
                                    android:layout_height="@dimen/_25ssp"
                                    android:src="@drawable/ic_favorites" />
                            </LinearLayout>

                        </RelativeLayout>


                    </android.support.percent.PercentRelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>

